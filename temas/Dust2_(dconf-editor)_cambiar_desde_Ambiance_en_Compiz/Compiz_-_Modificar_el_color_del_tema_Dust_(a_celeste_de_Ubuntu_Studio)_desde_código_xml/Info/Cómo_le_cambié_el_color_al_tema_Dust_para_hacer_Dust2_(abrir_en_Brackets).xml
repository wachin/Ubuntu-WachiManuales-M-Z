<!--
    Construct titlebar from rectangles instead so we can pick up the GTK theme
-->

<!--
   WACHIN, BARRA DE TÍTULO DESDE RECTANGULOS EN SU LUGAR PUEDES RECOGER EL TEMA GTK
-->
    <!--   LE PONGO AZUL CELESTE CLARO -->

<draw_ops name="draw_title">
    <!-- Background gradient -->
    <gradient type="vertical" x="0" y="0" width="width+9" height="height">
        <!--<color value="#80594D"/>-->
        <color value="shade/gtk:bg[SELECTED]/0.8"/>
        <!--Static colors to match static menubar and all-->
        <!--WACHIN ESTOS COLORES EMPIEZAN CON EL COLOR DEL LOGO UBUNTU STUDIO #009AF8-->
        <!-- DE MAS CLARO #009AF8 AL MAS OSCURO #0287d8-->
        <color value="#009AF8" />
        <color value="#0294ed" />
        <color value="#028ce0" />
        <color value="#0287d8" />
    </gradient>




   <!--WACHIN, ESTA ES LA BARRA DE TÍTULO INACTIVA -->
